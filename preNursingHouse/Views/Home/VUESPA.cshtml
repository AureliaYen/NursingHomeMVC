@*訂購登入*@
<!-- 按鈕 -->

<a href="#" type="button" data-bs-toggle="modal" data-bs-target="#loginModal">餐點訂購</a>
<div id="login-app">
    <div class="modal fade" id="loginModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Header -->
                <div class="modal-header">
                    <h3>住民登入</h3>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <!-- Body -->
                <div class="modal-body">
                    <!-- 登入表單 -->
                    <form>
                        <!-- email -->
                        <div class="form-group">
                            <input type="text" class="pid form-control" placeholder="身分證字號" v-model="p身分證字號">
                        </div>
                        <!-- password -->
                        <div class="form-group">
                            <input type="tel" class="phone form-control" placeholder="電話號碼" v-model="p聯絡電話">
                        </div>
                        <!-- checkbox -->
                        <div class="form-group">
                            <input type="checkbox" class="remember" v-model="remember">記住我的密碼
                        </div>
                        <!-- 送出按鈕 -->
                        <button type="button" class="btn btn-info" @@click="login"> 登入 </button>
                    </form>

                </div>

            </div>
        </div>
    </div>
</div>
