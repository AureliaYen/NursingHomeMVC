@model preNursingHouse.Models.TMember

@{
    ViewData["Title"] = "Detail";
}

<h1>會員訊息</h1>
@{
    string sex = "";
    if ((bool)@Model.M性別)
    {
        sex = "男";
    }
    else
    {
        sex = "女";
    }
<div>
    <h4></h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MId)
        </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.M照片)
            </dt>
            <dd class="col-sm-10">
                <img src="@Url.Content("https://localhost:7105/images/MemberImages/" +Model.M照片)" width="120" height="120" />
            </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.M姓名)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.M姓名)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.M性別)
        </dt>
        <dd class="col-sm-10">
            @sex
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.M手機)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.M手機)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.M密碼)
        </dt>
        <dd class = "col-sm-10">
                @{
                    var passwordlen = Model.M密碼.Length;
                    var firstChar = Model.M密碼[0];
                    var lastChar = Model.M密碼[passwordlen - 1];
                    var maskedString = new String('*', passwordlen - 2);
                    var maskedPassword = firstChar + maskedString + lastChar;
        }
                @Html.DisplayFor(model => maskedPassword)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MEmail)
        </dd>

       

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.M住址)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.M住址)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.M加入時間)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.M加入時間)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.M修改時間)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.M修改時間)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.M最後登入時間)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.M最後登入時間)
        </dd>


    </dl>
</div>
<div>

    @Html.ActionLink("修改", "Edit", new { id = Model.MId }) |
    <a asp-controller="Home" asp-action="Edit">回首頁</a>
</div>
}
