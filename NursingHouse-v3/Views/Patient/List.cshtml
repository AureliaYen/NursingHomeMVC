@model IEnumerable<NursingHouse_v3.Models.TPatientInfo>

@{
    ViewData["Title"] = "List";
}
@section Styles{
    <link rel="stylesheet" href="~/assets/plugins/DataTable/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/assets/plugins/DataTable/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/assets/plugins/DataTable/datatables-buttons/css/buttons.bootstrap4.min.css">
}

<h1 style="text-align:center">住民資料表</h1>
<p>
    <a asp-action="Create" class="btn btn-outline-secondary" >新增紀錄</a>
</p>
<table id="example1" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                序
            </th>
            <th>
                @Html.DisplayNameFor(model => model.P編號)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.P照片)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.P姓名)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.P性別)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.P身分證字號)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.P出生日期)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.P地址)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.P聯絡電話)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.P聯絡人)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.P電話2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.P餐點)
            </th>          
            @*<th>
                @Html.DisplayNameFor(model => model.P建立)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.P更新)
            </th>*@

            <th>
                編輯
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0; 
            foreach (var item in Model) {
                count++;
                <tr>
                <td>
                   @count
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.P編號)
                </td>
                <td>
                        <img src="~/images/PatientImages/@item.P照片" width="120" height="120">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.P姓名)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.P性別)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.P身分證字號)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.P出生日期)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.P地址)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.P聯絡電話)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.P聯絡人)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.P電話2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.P餐點)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.P建立)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.P更新)
                </td>*@

                <td>
                        @Html.ActionLink("修改", "Edit", new { id=item.PId}, new { Class = "btn btn-success" })
                        @Html.ActionLink("細項", "Details", new {  id=item.PId  }, new { Class = "btn btn-warning" })
                        @Html.ActionLink("刪除", "Delete", new { id=item.PId},new{Class = "btn btn-danger",onclick="return confirm('確定要刪除嗎?')",@class="btn btn-danger"})
                </td>
            </tr>
}}
    </tbody>
</table>
@section Scripts
    {
                <script>

                </script>

                <!-- DataTables  & Plugins -->
    @*手寫*@
                <script src="~/assets/plugins/DataTable/datatables/jquery.dataTables.min.js"></script>
                <script src="~/assets/plugins/DataTable/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
                <script src="~/assets/plugins/DataTable/datatables-responsive/js/dataTables.responsive.min.js"></script>
                <script src="~/assets/plugins/DataTable/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
                <script src="~/assets/plugins/DataTable/datatables-buttons/js/dataTables.buttons.min.js"></script>
                <script src="~/assets/plugins/DataTable/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
                <script src="~/assets/plugins/jszip/dist/jszip.min.js"></script>
                <script src="~/assets/plugins/pdfmake/pdfmake.min.js"></script>
                <script src="~/assets/plugins/pdfmake/vfs_fonts.js"></script>
                <script src="~/assets/plugins/DataTable/datatables-buttons/js/buttons.html5.min.js"></script>
                <script src="~/assets/plugins/DataTable/datatables-buttons/js/buttons.print.min.js"></script>
                <script src="~/assets/plugins/DataTable/datatables-buttons/js/buttons.colVis.min.js"></script>


                <script>
                $(function () {
                    $("#example1").DataTable({
                        "responsive": true, "lengthChange": false, "autoWidth": false,
                        "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"],
                        //"language": {
                        //        "url": "//cdn.datatables.net/plug-ins/1.13.3/i18n/zh-HANT.json",
                        //    },
                    }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');

                })
                </script>
}
