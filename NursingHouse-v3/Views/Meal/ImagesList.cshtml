@model IEnumerable<NursingHouse_v3.Models.TImage>

@{
    ViewData["Title"] = "ImagesList";
}
@section Styles{
    <link rel="stylesheet" href="~/assets/plugins/DataTable/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/assets/plugins/DataTable/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/assets/plugins/DataTable/datatables-buttons/css/buttons.bootstrap4.min.css">
}
<h1 style="text-align:center">餐點圖示表</h1>

<p>
    <a asp-action="ImageCreate" class="btn btn-outline-secondary">新增圖片</a>
</p>
<table id="example1" class="table table-bordered table-striped">
    <thead>
        <tr>
               <th>
                序
            </th>
            <th>
                餐種
            </th>
            <th>
                餐別
            </th>
          @*  <th>
                @Html.DisplayNameFor(model => model.MaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeId)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.月圖)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.早圖)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.午圖)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.晚圖)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.圖一)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.圖二)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.圖三)
            </th>

            <th>編輯</th>

        </tr>
    </thead>
    <tbody>
 @{
            int count = 0; 
            foreach (var item in Model) {
                count++;
                <tr>
                <td>
                   @count
                </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Me.餐種)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Me.餐別)
                    </td>
           @* <td>
                    @Html.DisplayFor(modelItem => item.MaId)
            </td>*@
            @*<td>
                    @Html.DisplayFor(modelItem => item.MeId)
            </td>*@
            <td>
                        <img src="~/images/MealImages/@item.月圖" width="200" height="180">
            </td>
            <td>
                        <img src="~/images/MealImages/@item.早圖" width="200" height="180">
            </td>
            <td>
                        <img src="~/images/MealImages/@item.午圖" width="200" height="180">
            </td>
            <td>
                    <img src="~/images/MealImages/@item.晚圖" width="200" height="180">
            </td>
            <td>
                    <img src="~/images/MealImages/@item.圖一" width="200" height="180">
            </td>         
            <td>
                        <img src="~/images/MealImages/@item.圖二" width="200" height="180">
            </td>
            <td>
                        <img src="~/images/MealImages/@item.圖三" width="200" height="180">
            </td>
            
            <td>
                        @Html.ActionLink("編輯", "ImageEdit", new { id=item.MaId}, new { Class = "btn btn-success" })
                        @Html.ActionLink("刪除", "ImageDelete", new { id=item.MaId},new{Class = "btn btn-danger",onclick="return confirm('確定要刪除嗎?')",@class="btn btn-danger"})
            </td>
        </tr>
}}
    </tbody>
</table>
@section Scripts
    {
        <script>

        </script>

        <!-- DataTables  & Plugins -->
    @*手寫*@
        <script src="~/assets/plugins/DataTable/datatables/jquery.dataTables.min.js"></script>
        <script src="~/assets/plugins/DataTable/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
        <script src="~/assets/plugins/DataTable/datatables-responsive/js/dataTables.responsive.min.js"></script>
        <script src="~/assets/plugins/DataTable/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
        <script src="~/assets/plugins/DataTable/datatables-buttons/js/dataTables.buttons.min.js"></script>
        <script src="~/assets/plugins/DataTable/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
        <script src="~/assets/plugins/jszip/dist/jszip.min.js"></script>
        <script src="~/assets/plugins/pdfmake/pdfmake.min.js"></script>
        <script src="~/assets/plugins/pdfmake/vfs_fonts.js"></script>
        <script src="~/assets/plugins/DataTable/datatables-buttons/js/buttons.html5.min.js"></script>
        <script src="~/assets/plugins/DataTable/datatables-buttons/js/buttons.print.min.js"></script>
        <script src="~/assets/plugins/DataTable/datatables-buttons/js/buttons.colVis.min.js"></script>

        <script>
            $(function () {
                $("#example1").DataTable({
                    "responsive": true, "lengthChange": false, "autoWidth": false,
                    "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"],
                    //"language": {
                    //        "url": "//cdn.datatables.net/plug-ins/1.13.3/i18n/zh-HANT.json",
                    //    },
                }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');

            })
        </script>
}
