@model IEnumerable<NursingHouse_v3.Models.TSupplier>

@{
    ViewData["Title"] = "SupplierList";
}
@section Styles{
    <link rel="stylesheet" href="~/assets/plugins/DataTable/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/assets/plugins/DataTable/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/assets/plugins/DataTable/datatables-buttons/css/buttons.bootstrap4.min.css">
}

<h1 style="text-align:center">供應廠商</h1>

<p>
    <a asp-action="SupplierCreate" class="btn btn-outline-secondary">新增廠商</a>
</p>
<table id="example1" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                序
            </th>
            <th>
                @Html.DisplayNameFor(model => model.廠商名稱)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.廠商地址)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.廠商email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.廠商電話)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.廠商聯絡人)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.聯絡人email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.建立時間)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.修改時間)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.建立人)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.備註)
            </th>
            <th>編輯</th>
        </tr>
    </thead>
    <tbody>
 @{
            int count = 0; 
            foreach (var item in Model) {
                count++;
                <tr>
                <td>
                   @count
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.廠商名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.廠商地址)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.廠商email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.廠商電話)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.廠商聯絡人)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.聯絡人email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.建立時間)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.修改時間)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.建立人)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.備註)
            </td>
            <td>
                        @Html.ActionLink("編輯", "SupplierEdit", new {  id=item.SuId }, new { Class = "btn btn-success" })
                        @Html.ActionLink("刪除", "SupplierDelete", new {  id=item.SuId  },new{Class = "btn btn-danger",onclick="return confirm('確定要刪除嗎?')",@class="btn btn-danger"})
            </td>
        </tr>
}}
    </tbody>
</table>
@section Scripts
    {
    <script>

    </script>

    <!-- DataTables  & Plugins -->
    @*手寫*@
    <script src="~/assets/plugins/DataTable/datatables/jquery.dataTables.min.js"></script>
    <script src="~/assets/plugins/DataTable/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/assets/plugins/DataTable/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/assets/plugins/DataTable/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/assets/plugins/DataTable/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/assets/plugins/DataTable/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/assets/plugins/jszip/dist/jszip.min.js"></script>
    <script src="~/assets/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/assets/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/assets/plugins/DataTable/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/assets/plugins/DataTable/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/assets/plugins/DataTable/datatables-buttons/js/buttons.colVis.min.js"></script>
   
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"],
                //"language": {
                //        "url": "//cdn.datatables.net/plug-ins/1.13.3/i18n/zh-HANT.json",
                //    },
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');

        })
    </script>
}

