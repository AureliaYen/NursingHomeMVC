@model IEnumerable<NursingHouse_v3.Models.TOffService>

@{
    ViewData["Title"] = "List";
}
@section Styles{
    <link rel="stylesheet" href="~/assets/plugins/DataTable/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/assets/plugins/DataTable/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/assets/plugins/DataTable/datatables-buttons/css/buttons.bootstrap4.min.css">
}

<h1 style="text-align:center">就醫交班一覽表</h1>
<p>
    <a asp-action="COffServiceCreate" class="btn btn-outline-secondary">新增紀錄</a>
</p>
<table id="example1" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                序
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.O就診日期)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.O回診日期)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PIdNavigation.P姓名)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PIdNavigation.P身分證字號)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.PIdNavigation.P出生日期)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PIdNavigation.P聯絡電話)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.O醫師診斷)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.O指示與用藥)
            </th>
@*            <th>
                @Html.DisplayNameFor(model => model.O建立)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.O更新)
            </th>*@
            <th>
                記錄人員
            </th>
            <th>
                編輯
            </th>
        </tr>
    </thead>
    <tbody>
 @{
            int count = 0; 
            foreach (var item in Model) {
                count++;
                <tr>
                <td>
                   @count
                </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.O就診日期)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.O回診日期)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PIdNavigation.P姓名)
            </td>
            <td>
                 @Html.DisplayFor(modelItem => item.PIdNavigation.P身分證字號)
            </td>
            <td>
                 @Html.DisplayFor(modelItem => item.PIdNavigation.P出生日期)
            </td>
             <td>
                 @Html.DisplayFor(modelItem => item.PIdNavigation.P聯絡電話 )
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.O醫師診斷)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.O指示與用藥)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.O建立)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.O更新)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.EIdNavigation.E員工姓名)
            </td>
            <td>
                        @Html.ActionLink("修改", "OffServiceEdit",  new {  id=item.OId  }, new { Class = "btn btn-success" })
                        @Html.ActionLink("細項", "Details", new {  id=item.OId  }, new { Class = "btn btn-warning" })
                        @Html.ActionLink("刪除", "Delete", new {  id=item.OId  },new{Class = "btn btn-danger",onclick="return confirm('確定要刪除嗎?')",@class="btn btn-danger"})
            </td>
        </tr>
}}
    </tbody>
</table>
