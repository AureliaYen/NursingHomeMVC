@model IEnumerable<NursingHouse_v3.Models.TBed>

@{
    ViewData["Title"] = "List";
}
@section Styles{
    <link rel="stylesheet" href="~/assets/plugins/DataTable/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/assets/plugins/DataTable/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/assets/plugins/DataTable/datatables-buttons/css/buttons.bootstrap4.min.css">
}

<h1 style="text-align:center">床位登記表</h1>

<p>
    <a class="btn btn-outline-secondary" asp-action="Create">新增登記</a>
</p>
<table id="example1" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                序
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.PId)
            </th>*@
            <th>
                住民編號
            </th>
            <th>
                住民姓名
            </th>
            <th>
                床號
            </th>
            <th>
                房型
            </th>
            <th>
                @Html.DisplayNameFor(model => model.B入住時間)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.B預計退房時間)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.B建立日期)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.B建立者工號)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.B修改日期)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.B修改者工號)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@{
            int count = 0;
            foreach (var item in Model) 
            {
                count++;
        <tr>
            <td>
                @count
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.PIdNavigation.PId)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.PIdNavigation.P編號)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PIdNavigation.P姓名)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RbIdNavigation.Rb床號)
            </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RbIdNavigation.Rb房型)
                    </td>
            <td>
                @Html.DisplayFor(modelItem => item.B入住時間)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.B預計退房時間)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.B建立日期)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.B建立者工號)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.B修改日期)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.B修改者工號)
            </td>*@
            <td>
                        @Html.ActionLink("修改", "Edit", new { id=item.BId }, new { Class = "btn btn-success" })
                        @Html.ActionLink("詳細", "Details", new { id=item.BId }, new { Class = "btn btn-warning" })
                        @Html.ActionLink("刪除", "Delete", new { id=item.BId },
                new { Class = "btn btn-danger", onclick = "return confirm('確定刪除嗎?')"})
            </td>
        </tr>
}}
    </tbody>
</table>

@section Scripts
    {
    <!-- DataTables  & Plugins -->
    <script src="~/assets/plugins/DataTable/datatables/jquery.dataTables.min.js"></script>
    <script src="~/assets/plugins/DataTable/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/assets/plugins/DataTable/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/assets/plugins/DataTable/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/assets/plugins/DataTable/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/assets/plugins/DataTable/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/assets/plugins/jszip/dist/jszip.min.js"></script>
    <script src="~/assets/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/assets/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/assets/plugins/DataTable/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/assets/plugins/DataTable/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/assets/plugins/DataTable/datatables-buttons/js/buttons.colVis.min.js"></script>

    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"],
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');

        })
    </script>
    }
