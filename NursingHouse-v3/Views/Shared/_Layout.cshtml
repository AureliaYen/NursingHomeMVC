<script>

    //目前網頁位置
    var currentUrl = window.location.pathname;
    var currentController = currentUrl.split('/')[1];
    var currentAction = currentUrl.split('/')[2];
    $("#currentController").text(currentController);
    $("#currentAction").text(currentAction);

    let setEmployeeId
    $(document).ready(function () {
        setEmployeeId = $('#backendEmployeeId').text()
        if (setEmployeeId == null || setEmployeeId === undefined) {
            //console.log(1)
            connectBackendLogin()
        }else{
            //console.log(2)
            localStorage.setItem('employeeId', setEmployeeId)
        }

    });

    $('#activityItemLink').click(function (event) {        
        let checkEid = localStorage.getItem('employeeId')
        if (checkEid.slice(0, 1) === 'E') {
            window.location.assign("/Activity/ActivityItemList");           
        } else {
            event.preventDefault();
            connectBackendLogin()
        }
    })

    

